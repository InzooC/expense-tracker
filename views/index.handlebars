<div class="container mt-4">


  <!-- search bar -->
  <form action="/filter" method="POST" class="container">
    <div class="input-group mb-3">
      <select class="form-select" id="category" name="category" onchange="this.form.submit()">
        {{!-- 還沒做出顯示現在選的類別 --}}
        <option value="0">類別</option>
        <option value="1">家居物業</option>
        <option value="2">交通出行</option>
        <option value="3">休閒娛樂</option>
        <option value="4">餐飲食品</option>
        <option value="5">其他</option>
      </select>
    </div>
  </form>

  <table class="table table-striped table-borderless">
    <thead>
      <tr>
        <th scope="col" colspan="1" style="vertical-align: top;font-size: 30px;">總金額：</th>
        <th scope="col" colspan="3" style="text-align: end; color:coral; font-size: 50px;">{{ totalAmount }}</th>
        <th scope="col" colspan="4">
          <div></div>
        </th>
      </tr>
    </thead>
    <tbody>
      {{#each records}}
      <tr>
        <td>{{this.icon}}</td>
        <td colspan="3">{{ this.name }}</td>
        <td style="text-align: end;">{{ this.amount }}</td>
        <td>
          <div></div>
        </td>
        <td>
          <a href="/record/{{ this._id }}/edit" style="text-decoration:none; color:gray; border: 1px gray none;"
            class=" btn btn btn-outline-secondary">修改</a>
        </td>
        <td>
          <form action="/record/{{this._id}}?_method=DELETE" method="POST">
            <button type="submit" class="btn btn-outline-secondary"
              style="text-decoration:none; color:gray; border: 1px gray none;">刪除</button>
          </form>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>

  <div class="row mb-4" style="text-align: center;">
    <a href="/record/new" style="text-decoration:none;">
      <button type="button" style="background-color: orange; color:aliceblue;" class="btn btn-outline-primary mx-3">
        新增支出
      </button>
    </a>
  </div>

</div>