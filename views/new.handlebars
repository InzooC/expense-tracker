<div class="container mt-5" style="max-width: 600px;">


  <form method="POST" action="/record/new">
    <div class="form-group row">
      <div class="col-sm-5">
        <h6 style="display:inline;">
          *必填欄位
        </h6>
      </div>
      <div class="col-sm-5">
        <h5 style="display:inline;">
          請輸入你的支出
        </h5>
      </div>
    </div>

    <div class="form-group row">
      <label for="name" class="col-sm-2 col-form-label">名稱<span style="vertical-align: top;">*</span>：</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="name" name="name" required>
      </div>
    </div>

    <div class="form-group row">
      <label for="date" class="col-2 col-form-label">日期<span style="vertical-align: top;">*</span>：
      </label>
      <div class="col-sm-10">
        <input type="date" class="form-control" id="date" name="date" required>
      </div>
    </div>

    <div class="form-group row">
      <label for="amount" class="col-2 col-form-label">類別<span style="vertical-align: top;">*</span>：
      </label>
      <div class="col-sm-10">
        <select class="form-control" name="category" id="category">
          <option value="1">家居物業</option>
          <option value="2">旅遊出行</option>
          <option value="3">休閒娛樂</option>
          <option value="4">餐飲食品</option>
          <option value="5">其他</option>
        </select>
      </div>
    </div>
    <div class="form-group row">
      <label for="amount" class="col-2 col-form-label">金額<span style="vertical-align: top;">*</span>：
      </label>
      <div class="col-sm-10">
        <input type="number" class="form-control" id="amount" name="amount" required>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-5"></div>
      <div class="col-sm-6">
        <button class="btn btn-outline-dark" style="min-width: 150px;" type="submit">新增支出</button>
      </div>
    </div>
    
  </form>

</div>