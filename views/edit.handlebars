<div class="container mt-5" style="max-width: 600px;">
  <form action="/record/{{record._id}}?_method=PUT" method="POST">
    <div class="form-group row">
      <div class="col-sm-5">
        <h6 style="display:inline;">
          *必填欄位
        </h6>
      </div>
      <div class="col-sm-5">
        <h5 style="display:inline;">
          請修改你的支出
        </h5>
      </div>
    </div>
    <div class="form-group row">
      <label for="name" class="col-2 col-form-label">名稱<span style="vertical-align: top;">*</span>：
      </label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="name" name="name" maxlength="20" required value="{{ record.name }}">
      </div>
    </div>
    <div class="form-group row">
      <label for="date" class="col-2 col-form-label">日期<span style="vertical-align: top;">*</span>：
      </label>
      <div class="col-sm-10">
        <input type="date" class="form-control" id="date" name="date" value="{{ formatDate }}">
      </div>
    </div>
    <div class="form-group row">
      <label for="category" class="col-2 col-form-label">類別<span style="vertical-align: top;">*</span>：
      </label>
      <div class="col-sm-10">
        <select class="form-control" name="category" id="category" required>
          <option value="{{ record.categoryNumber }}" selected>{{ record.category }}</option>
          {{#each filterCategory}}
          <option value="{{ this.id }}">{{ this.name }}</option>
          {{/each}}
        </select>
      </div>
    </div>
    <div class="form-group row">
      <label for="amount" class="col-2 col-form-label">金額<span style="vertical-align: top;">*</span>：
      </label>
      <div class="col-sm-10">
        <input type="number" class="form-control" id="amount" name="amount" min="0" max="9999999" required
          value="{{ record.amount }}">
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-5"></div>
      <div class="col-sm-6">
        <button class="btn btn-outline-dark" style="min-width: 150px;" type="submit">送出</button>
      </div>
    </div>
  </form>
</div>